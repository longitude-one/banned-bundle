{
    "name": "longitude-one/banned-bundle",
    "description": "Banned user (non)-authentication",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexandre Tranchant",
            "email": "alexandre.tranchant@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "symfony/security-bundle": "^5.4|^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "10.*",
        "friendsofphp/php-cs-fixer": "^3.23",
        "nyholm/symfony-bundle-test": "^2.0"
    },
    "scripts": {
        "fix": "php-cs-fixer fix --allow-risky=yes --config=.php-cs-fixer.dist.php",
        "test": "vendor/bin/phpunit"
    },
    "autoload": {
        "psr-4": {
            "LongitudeOne\\BannedBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LongitudeOne\\BannedBundle\\Tests\\": "tests/"
        }
    }
}
